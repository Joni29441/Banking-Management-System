<Window x:Class="Bank.Card"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d" Width="1000" Height="600"
        Background="#fff"
        WindowStartupLocation="CenterScreen">
    <Grid Width="1000" Margin="0,0,0,0">
        <Image Source="Assets/Am.jpg" Margin="192,0,192,203" Grid.ColumnSpan="2"></Image>
        <Label Content="Welcome to American Express" HorizontalAlignment="Left"  VerticalAlignment="Center" HorizontalContentAlignment="Center" Height="60" Width="504" FontSize="36" Grid.ColumnSpan="2" FontFamily="Yu Gothic UI Semibold" Margin="248,0,0,0"/>
        <Button Content="" HorizontalAlignment="Center" Margin="0,386,0,0" VerticalAlignment="Top" Height="158" Width="165" Foreground="#00000000" BorderBrush="#00000000" Click="Button_Click">
            <Button.Background>
                <ImageBrush ImageSource="/card.png"/>
            </Button.Background>
        </Button>
        <Label Content="Insert Your Card" HorizontalAlignment="Center"  VerticalAlignment="Top" HorizontalContentAlignment="Center" Height="60" Width="504" FontSize="25" FontFamily="Yu Gothic UI Semibold" Margin="0,321,0,0"/>

    </Grid>
</Window>
