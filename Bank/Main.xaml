<Window x:Class="Bank.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank"
        mc:Ignorable="d"
        Title="Main" Width="1000" Height="600"
        Background="LightBlue">
    <Grid Width="1000" Height="600">
        <Grid Margin="300,10,296,490">
            <Image Source="/Assets/AE.png" Height="118" VerticalAlignment="Top" Margin="2,-7,-2,0"/>
        </Grid>
        <TextBox x:Name="Pin" HorizontalAlignment="Center" Margin="0,299,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="186" Height="24"/>
        <Label Content="PIN" HorizontalAlignment="Left" Margin="482,251,0,0" VerticalAlignment="Top" Height="37" Width="47" FontSize="22"/>
        <Button x:Name="Enter" Content="ENTER" HorizontalAlignment="Right" Margin="686,357,0,0" Background="AliceBlue" VerticalAlignment="Top" Width="175" Height="51" Click="Enter_Click"/>
        <Button x:Name="Exit" Content="EXIT" HorizontalAlignment="Right" Background="AliceBlue" Margin="684,256,0,0" VerticalAlignment="Top" Height="49" Width="179" Click="Exit_Click"/>

    </Grid>
</Window>
