<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="American_Express.MainPage">

    <ContentPage.Content>

        <StackLayout Background="Black">
            <StackLayout Orientation="Vertical">
            <Image Source="American.png" WidthRequest="250"/>
            <StackLayout Padding="50" Margin="0,10,0,0" >
                    <Entry Text="{Binding BankId}" Placeholder="BankID" BackgroundColor="#202020" PlaceholderColor="White" TextColor="White"/>
                    <Entry Text="{Binding Password}" Placeholder="Password" BackgroundColor="#202020" PlaceholderColor="White" TextColor="White" IsPassword="True"/>
                    <StackLayout Padding="15" Margin="0,15,0,0">
                    <Button Text="Login" BackgroundColor="#5592FF" TextColor="White" Clicked="LogInButton"></Button>
                    <StackLayout Padding="10" Margin="0,25,0,0">
                        <Button Text="Forgot password" BackgroundColor="Black" TextColor="White" Clicked="ForgotButton" />
                    </StackLayout>
                </StackLayout>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>
